<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="?attr/appFocusableBgColor" android:state_focused="false">
        <shape>
            <solid android:color="?attr/appFocusableBgColor" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="?attr/appFocusableBgColor" />
            <stroke android:width="1dp" android:color="?attr/appFocusableBorderColor" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>